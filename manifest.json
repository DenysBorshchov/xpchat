  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+chat",
      "url": "/?contact=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/*": [".txt", ".md", ".json"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "video/*": [".mp4", ".webm", ".avi"],
        "audio/*": [".mp3", ".wav", ".ogg"]
      }
    }
  ],
  "share_target": {
    "action": "/?action=share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "video/*", "audio/*", "text/*"]
        }
      ]
    }
  },
  "permissions": [
    "camera",
    "microphone",
    "geolocation",
    "notifications",
    "clipboard-read",
    "clipboard-write"
  ],
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "features": [
    "Cross Platform",
    "fast",
    "simple",
    "AI Assistant",
    "Group Chats",
    "File Sharing",
    "Voice Messages",
    "Dark Theme",
    "Offline Support"
  ],
  "developer": {
    "name": "XPchat Team",
    "url": "https://github.com/xpchat"
  },
  "version": "2.0.0",
  "minimum_version": "1.0.0",
  "update_url": "https://xpchat.com/updates",
  "support_url": "https://xpchat.com/support",
  "privacy_policy_url": "https://xpchat.com/privacy",
  "terms_of_service_url": "https://xpchat.com/terms"
}
